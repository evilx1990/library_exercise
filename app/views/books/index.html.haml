%section#most-popular
  .row
    .col-12.offset-0.col-md-10.offset-md-1.col-lg-6.offset-lg-3
      %h4.most-popular-books-text
        most popular books
      %hr.underline/
  -if @books.count.zero?
    .text-center.pb-3
      %small
        empty :(
  -else
    =render 'carousel'
  .row.mt-2
    .col-12.offset-0.col-md-10.offset-md-1.col-lg-6.offset-lg-3
      %hr.underline/

%section#librarian-control
  .row.mt-4.mb-2
    .col-6.offset-3.col-lg-2.offset-lg-5
      =link_to('Add book', '#modal-form', 'data-toggle' => 'modal', class: 'btn btn-success d-block')

%section#books
  .row
    .col-12.offset-0.col-md-10.offset-md-1.col-lg-6.offset-lg-3
      %h4.all-books-text
        all books
      %hr.underline/
  .row
    .col-10.offset-1.col-lg-6.offset-lg-3
      -if @books.count.zero?
        .text-center.pb-3
          %small
            empty :(
      -else
        -@books.each do |book|
          =render book, manip: true
          %hr.d-block.mt-3.mb-2/
  .row
    .col-10.offset-1.col-lg-6.offset-lg-3.mb-3.mt-3
      =paginate @books, window: 1

=render 'modal_book_form'
