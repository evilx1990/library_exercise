.row#carousel
  .col-1.m-0.p-0
    .carousel-nav.left
      %span
        <
  .col-10.m-0.p-0
    .carousel-content
      -most_popular.each_with_index do |book, index|
        .carousel-point{ class: index.eql?(0) ? 'active' : '' }
          =render 'book', book: book
  .col-1.m-0.p-0
    .carousel-nav.right
      %span
        >
