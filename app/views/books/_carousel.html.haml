.row#carousel
  .col-12.offset-0.col-md-10.offset-md-1.col-lg-6.offset-lg-3
    .row
      .col-1.m-0.p-0
        .carousel-nav.left
          %span
            <
      .col-10.m-0.p-0
        .carousel-content
          -most_popular.each_with_index do |book, index|
            .carousel-point{ class: index.eql?(0) ? 'active-slide' : '' }
              =render 'book', book: book
      .col-1.m-0.p-0
        .carousel-nav.right
          %span
            >
