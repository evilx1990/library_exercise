#devise-form
  =form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'row'}) do |f|
    .field.col-10.offset-1
      =f.email_field :email,
                     placeholder: 'email',
                     class: 'devise-field'
    .field.col-10.offset-1
      =f.password_field :password,
                         placeholder: 'password',
                         class: 'devise-field'
    .field.mb-2.col-10.offset-1
      =f.check_box :remember_me
      =f.label :remember_me
    .actions.col-10.offset-1.d-flex.justify-content-between
      =f.submit 'Log in', data: { 'disable-with' => 'load...' }, class: 'devise-button'
      = render 'devise/shared/links'
